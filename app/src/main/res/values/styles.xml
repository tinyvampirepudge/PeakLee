<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/app_bg</item>
        <item name="android:windowAnimationStyle">@style/FadeAnimationStyle</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="FadeAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/qd_translucent_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/qd_translucent_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/qd_translucent_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/qd_translucent_exit</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="title_standard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="title_bar_white" parent="title_standard">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/shape_c2_0</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="title_txt">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/c3</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="h_line_1px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/menu_split</item>
    </style>

    <!-- 关于龙虎榜界面 start -->
    <style name="txt_about_lhb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/font_main_1</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="txt_user_info_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/font_main_1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_user_info_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/font_main_1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="layout_about_lhb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#fff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/activity_space_15</item>
        <item name="android:paddingRight">@dimen/activity_space_15</item>
    </style>
    <!-- 关于龙虎榜界面 end -->

    <style name="style_layout_fragment_my">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#fff</item>
        <item name="android:paddingLeft">@dimen/activity_space_15</item>
    </style>

    <style name="style_txt_right_fragment_my">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/activity_space_15</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/ic_home_2_right</item>
        <item name="android:textColor">@color/font_red</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>
